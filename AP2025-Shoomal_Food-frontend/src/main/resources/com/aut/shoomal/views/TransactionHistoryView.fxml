<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aut.shoomal.controllers.TransactionHistoryController">
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label styleClass="head-label" text="سابقه تراکنش کاربر" textFill="WHITE">
            <font>
                <Font size="16.0" />
            </font></Label>
        <TableView fx:id="transactionTable" nodeOrientation="RIGHT_TO_LEFT" styleClass="table-view" VBox.vgrow="ALWAYS">

            <columns>
                <TableColumn fx:id="userIdColumn" prefWidth="100" text="شناسه کاربر" />
                <TableColumn fx:id="methodColumn" prefWidth="100" text="روش پرداخت" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="وضعیت" />
                <TableColumn fx:id="orderIdColumn" prefWidth="200" text="شناسه سفارش" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Button fx:id="backButton" onAction="#handleBackButton" styleClass="my-button2" text="Back" />
    </VBox>
</AnchorPane>