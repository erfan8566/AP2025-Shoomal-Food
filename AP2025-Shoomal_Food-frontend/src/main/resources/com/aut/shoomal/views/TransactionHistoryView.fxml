<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="/com/aut/shoomal/styles/AdminDashboardStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aut.shoomal.controllers.TransactionHistoryController">
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label styleClass="head-label" text="سابقه تراکنش کاربر">
            <font>
                <Font size="16.0" />
            </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Label>
        <TableView fx:id="transactionTable" nodeOrientation="RIGHT_TO_LEFT" styleClass="table-view" VBox.vgrow="ALWAYS">

            <columns>
                <TableColumn fx:id="userIdColumn" prefWidth="100" text="شناسه کاربر" />
                <TableColumn fx:id="methodColumn" prefWidth="100" text="روش پرداخت" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="وضعیت" />
                <TableColumn fx:id="orderIdColumn" prefWidth="200" text="شناسه سفارش" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Button fx:id="backButton" onAction="#handleBackButton" styleClass="my-button2" text="برگشن به پروفایل" />
    </VBox>
</AnchorPane>
