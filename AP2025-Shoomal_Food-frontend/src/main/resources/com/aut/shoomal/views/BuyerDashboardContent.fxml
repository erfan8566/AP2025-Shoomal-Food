<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<ScrollPane fx:id="buyerDashboardScrollPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aut.shoomal.controllers.BuyerDashboardContentController"
            fitToWidth="true" styleClass="dashboard-scroll-pane" stylesheets="@/com/aut/shoomal/styles/BuyerDashboardStyles.css"> <VBox alignment="TOP_CENTER" spacing="20" styleClass="content-area">
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <TextField fx:id="searchBar" promptText="جستجو در رستوران‌ها و غذاها" HBox.hgrow="ALWAYS" styleClass="my-text-field"/>
        <Button fx:id="searchButton" text="جستجو" styleClass="primary-button"/>
    </HBox>

    <VBox fx:id="searchResultsContainer" spacing="10" alignment="TOP_RIGHT">
        <VBox.margin>
            <Insets top="10" right="10" left="10" bottom="10"/>
        </VBox.margin>
        <Label fx:id="restaurantsHeader" text="رستوران‌های پرطرفدار" styleClass="card-title" visible="false" managed="false"/>
        <VBox fx:id="popularRestaurantsVBox" spacing="5"/>
        <Hyperlink fx:id="viewAllRestaurantsLink" text="مشاهده همه رستوران‌ها" styleClass="sidebar-hyperlink" visible="false" managed="false"/>

        <Label fx:id="foodsHeader" text="غذاهای پرطرفدار" styleClass="card-title" visible="false" managed="false"/>
        <VBox fx:id="popularFoodsVBox" spacing="5"/>
        <Hyperlink fx:id="viewAllFoodsLink" text="مشاهده همه غذاها" styleClass="sidebar-hyperlink" visible="false" managed="false"/>
    </VBox>
</VBox>
</ScrollPane>