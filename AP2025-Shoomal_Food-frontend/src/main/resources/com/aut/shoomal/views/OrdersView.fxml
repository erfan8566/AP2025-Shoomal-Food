<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="adminDashboardRoot" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/AdminDashboardStyles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aut.shoomal.controllers.AdminOrdersController">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="1280.0">
            <Label alignment="TOP_RIGHT" styleClass="card-title" text="مدیریت سفارشات" textAlignment="RIGHT" />
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                <Button fx:id="backButton" onAction="#handleBackToAdminDashboard" styleClass="my-button2" text="بازگشت به داشبورد" />
                <Button onAction="#handleFilterOrders" styleClass="primary-button" text="فیلتر" />
            </HBox>
            <TableView fx:id="ordersTableView" prefHeight="550.0" prefWidth="1200.0">
                <columns>
                    <TableColumn fx:id="orderIdColumn" prefWidth="75.0" text="شناسه" />
                    <TableColumn fx:id="orderStatusColumn" prefWidth="100.0" text="وضعیت" />
                    <TableColumn fx:id="orderCustomerColumn" prefWidth="100.0" text="شناسه مشتری" />
                    <TableColumn fx:id="orderVendorColumn" prefWidth="100.0" text="شناسه فروشنده" />
                    <TableColumn fx:id="orderCourierColumn" prefWidth="100.0" text="شناسه پیک" />
                    <TableColumn fx:id="orderDeliveryAddressColumn" prefWidth="200.0" text="آدرس تحویل" />
                    <TableColumn fx:id="orderRawPriceColumn" prefWidth="100.0" text="قیمت اولیه" />
                    <TableColumn fx:id="orderPayPriceColumn" prefWidth="100.0" text="قیمت نهایی" />
                    <TableColumn fx:id="orderCreatedAtColumn" prefWidth="150.0" text="تاریخ ثبت" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
    <VBox fx:id="filterSidebar" alignment="TOP_RIGHT" prefHeight="720.0" prefWidth="300.0" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-spacing: 15; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);" StackPane.alignment="CENTER_RIGHT">
        <Label alignment="TOP_RIGHT" text="فیلترها" textFill="WHITE">
            <font>
                <Font name="Vazirmatn Bold" size="20.0" />
            </font>
        </Label>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <Label alignment="TOP_RIGHT" text="جستجوی عمومی" textFill="WHITE" />
            <TextField fx:id="searchTextField" promptText="جستجو در نام کاربر/پیک/فروشنده" styleClass="my-text-field" />
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <Label alignment="TOP_RIGHT" text="فیلتر بر اساس مشتری" textFill="WHITE" />
            <TextField fx:id="customerSearchField" promptText="شناسه مشتری" styleClass="my-text-field" />
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <Label alignment="TOP_RIGHT" text="فیلتر بر اساس فروشنده" textFill="WHITE" />
            <TextField fx:id="vendorSearchField" promptText="شناسه فروشنده" styleClass="my-text-field" />
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <Label alignment="TOP_RIGHT" text="فیلتر بر اساس پیک" textFill="WHITE" />
            <TextField fx:id="courierSearchField" promptText="شناسه پیک" styleClass="my-text-field" />
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
            <Label alignment="TOP_RIGHT" text="فیلتر بر اساس وضعیت" textFill="WHITE" />
            <ComboBox fx:id="statusFilterComboBox" prefWidth="280.0" promptText="انتخاب وضعیت" styleClass="my-choice-box" />
        </VBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
            <Button onAction="#clearOrderFilters" styleClass="my-button2" text="پاک کردن فیلترها" />
            <Button onAction="#applyOrderFilters" styleClass="primary-button" text="اعمال فیلتر" />
        </HBox>
    </VBox>
</StackPane>