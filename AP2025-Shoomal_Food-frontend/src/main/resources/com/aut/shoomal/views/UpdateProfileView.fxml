            </children>
        </GridPane>
        <TextArea prefHeight="80.0" prefWidth="658.0" promptText="اطلاعات تکمیلی رستوران..." wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </TextArea>

        <!-- Save Button -->
        <HBox alignment="CENTER" prefHeight="51.0" prefWidth="720.0" spacing="20">
            <Button fx:id="saveButton" onAction="#handleSaveProfile" styleClass="primary-button" text="Save Profile" />
