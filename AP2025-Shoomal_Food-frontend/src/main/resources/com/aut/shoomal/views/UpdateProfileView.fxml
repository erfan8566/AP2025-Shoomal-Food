                </Label>
                <TextField fx:id="phoneField" promptText="شماره تلفن" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="98.0" text="ایمیل:" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="ایمیل" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="102.0" text="آدرس:" GridPane.columnIndex="1" GridPane.rowIndex="3">
