        <Label styleClass="header-label" text="تغییر پروفایل کاربران" textAlignment="JUSTIFY">
            <font>
                <Font size="18.0" />
            </font></Label>
        <Label alignment="TOP_RIGHT" prefHeight="26.0" prefWidth="761.0" styleClass="section-title" text="اطلاعات بانکی">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <GridPane prefHeight="73.0" prefWidth="720.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="668.0000610351562" minWidth="10.0" prefWidth="644.19990234375" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="353.5999755859375" minWidth="0.0" prefWidth="75.40009765624995" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="80.0" text="نام بانک:" GridPane.columnIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="bankNameField" promptText="نام بانک" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="80.0" text="شماره کارت:" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
