                <TextField prefHeight="26.0" prefWidth="216.0" />
                <TextField GridPane.rowIndex="1" />
                <TextField fx:id="bankAccountField" promptText="شماره کارت" GridPane.columnIndex="1" GridPane.rowIndex="1" />
